<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>File Group - {{ .title }}</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="shortcut icon" href="/static/favicon.ico" type="image/x-icon">
  <style>
    body {
      background-color: #444;
      color: #fff;
      margin: 0;
      padding: 20px;
      font-family: Arial, sans-serif;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    h1 {
      color: #f0f0f0;
      text-align: center;
      margin-bottom: 30px;
    }

    .header-actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .copy-url-btn {
      background-color: #007bff;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
    }

    .copy-url-btn:hover {
      background-color: #0056b3;
    }

    .file-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 20px;
      margin-bottom: 50px;
    }

    .file-card {
      background-color: #333;
      border-radius: 10px;
      padding: 20px;
      border: 2px solid #555;
      display: flex;
      flex-direction: column;
      min-height: 400px;
    }

    .file-card.not-found {
      border-color: #dc3545;
      background-color: #4d1a1a;
    }

    .file-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
    }

    .file-name {
      font-weight: bold;
      color: #fff;
      word-break: break-all;
    }

    .file-size {
      color: #ccc;
      font-size: 12px;
    }

    .file-preview {
      max-height: 300px;
      overflow: hidden;
      border-radius: 5px;
      margin-bottom: 15px;
      flex-grow: 1;
    }

    .text-preview {
      background-color: #222;
      padding: 15px;
      border-radius: 5px;
      overflow-y: auto;
      max-height: 300px;
      font-family: monospace;
      font-size: 12px;
      line-height: 1.4;
      white-space: pre-wrap;
      word-break: break-word;
    }

    .image-preview {
      text-align: center;
      max-height: 300px;
      overflow: hidden;
    }

    .image-preview img {
      max-width: 100%;
      max-height: 300px;
      object-fit: contain;
      border-radius: 5px;
    }

    .audio-preview {
      width: 100%;
    }

    .audio-preview audio {
      width: 100%;
    }

    .not-found-content {
      text-align: center;
      color: #dc3545;
      padding: 40px 20px;
    }

    .not-found-content i {
      font-size: 48px;
      margin-bottom: 15px;
    }

    .file-actions {
      display: flex;
      gap: 10px;
      margin-top: auto;
    }

    .download-btn {
      background-color: #28a745;
      color: #fff;
      padding: 8px 15px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      text-decoration: none;
      font-size: 12px;
      display: inline-block;
    }

    .download-btn:hover {
      background-color: #218838;
    }

    .view-btn {
      background-color: #17a2b8;
      color: #fff;
      padding: 8px 15px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      text-decoration: none;
      font-size: 12px;
      display: inline-block;
    }

    .view-btn:hover {
      background-color: #138496;
    }

    .copy-file-btn {
      background-color: #6f42c1;
      color: #fff;
      padding: 8px 15px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      text-decoration: none;
      font-size: 12px;
      display: inline-block;
    }

    .copy-file-btn:hover {
      background-color: #5a2d91;
    }

    .bottom-actions {
      text-align: center;
      margin-top: 30px;
    }

    .home-btn {
      background-color: #6c757d;
      color: #fff;
      padding: 12px 24px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      text-decoration: none;
      font-size: 14px;
      display: inline-block;
    }

    .home-btn:hover {
      background-color: #5a6268;
    }

    .footer {
      padding: 10px;
      background-color: #222;
      position: fixed;
      left: 0;
      bottom: 0;
      width: 100%;
      text-align: center;
    }

    .github-link {
      color: #fff;
      text-decoration: none;
      margin-left: 10px;
    }

    @media (max-width: 768px) {
      .file-grid {
        grid-template-columns: 1fr;
      }

      .header-actions {
        flex-direction: column;
        gap: 15px;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>File Group - {{ .title }}</h1>

    <div class="header-actions">
      <div>
        <span>{{ len .files }} file(s) in this group</span>
      </div>
      <button class="copy-url-btn" onclick="copyGroupUrl()">
        <i class="fas fa-copy"></i> Copy Group URL
      </button>
    </div>

    <div class="file-grid">
      {{ range .files }}
      <div class="file-card {{ if not .Exists }}not-found{{ end }}">
        <div class="file-header">
          <div class="file-name">{{ .Name }}</div>
          {{ if .Exists }}
          <div class="file-size">{{ .Size }}</div>
          {{ end }}
        </div>

        {{ if .Exists }}
          <div class="file-preview">
            {{ if .IsText }}
              <div class="text-preview">{{ .PreviewText }}</div>
            {{ else if .IsImage }}
              <div class="image-preview">
                <img src="/{{ .Name }}" alt="{{ .Name }}" loading="lazy">
              </div>
            {{ else if .IsAudio }}
              <div class="audio-preview">
                <audio controls>
                  <source src="/{{ .Name }}" type="{{ .MimeType }}">
                  Your browser does not support the audio element.
                </audio>
              </div>
            {{ else }}
              <div class="text-preview" style="text-align: center; padding: 40px;">
                <i class="fas fa-file" style="font-size: 48px; margin-bottom: 10px; color: #666;"></i>
                <br>
                <span style="color: #999;">Binary file - no preview available</span>
              </div>
            {{ end }}
          </div>

          <div class="file-actions">
            <a href="/{{ .Name }}?download=true" class="download-btn">
              <i class="fas fa-download"></i> Download
            </a>
            <a href="/{{ .Name }}" class="view-btn">
              <i class="fas fa-eye"></i> View
            </a>
            <button class="copy-file-btn" onclick="copyFileUrl('{{ .Name }}')">
              <i class="fas fa-copy"></i> Copy URL
            </button>
          </div>
        {{ else }}
          <div class="not-found-content">
            <i class="fas fa-exclamation-triangle"></i>
            <div>File not found</div>
          </div>
        {{ end }}
      </div>
      {{ end }}
    </div>

    <div class="bottom-actions">
      <a href="/" class="home-btn">
        <i class="fas fa-home"></i> Go Home
      </a>
    </div>
  </div>

  <div class="footer">
    <a href="https://github.com/matheusfillipe/girafiles" class="github-link">
      <i class="fab fa-github"></i> GitHub
    </a>
  </div>

  <script>
    function copyGroupUrl() {
      const url = "{{ .groupUrl }}";
      navigator.clipboard.writeText(url).then(() => {
        const btn = document.querySelector('.copy-url-btn');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-check"></i> Copied!';
        btn.style.backgroundColor = '#28a745';

        setTimeout(() => {
          btn.innerHTML = originalText;
          btn.style.backgroundColor = '#007bff';
        }, 2000);
      }).catch(err => {
        alert('Failed to copy URL: ' + err);
      });
    }

    function copyFileUrl(fileName) {
      const baseUrl = window.location.origin;
      const fileUrl = baseUrl + '/' + fileName;

      navigator.clipboard.writeText(fileUrl).then(() => {
        // Find the specific button that was clicked
        const buttons = document.querySelectorAll('.copy-file-btn');
        buttons.forEach(btn => {
          if (btn.onclick.toString().includes(fileName)) {
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-check"></i> Copied!';
            btn.style.backgroundColor = '#28a745';

            setTimeout(() => {
              btn.innerHTML = originalText;
              btn.style.backgroundColor = '#6f42c1';
            }, 2000);
          }
        });
      }).catch(err => {
        alert('Failed to copy URL: ' + err);
      });
    }
  </script>
</body>

</html>
